<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_user_info_photo"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/tv_user_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_huge"
        android:textSize="@dimen/font_larger" />

    <TextView
        android:id="@+id/tv_user_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="?selectableItemBackground"
        android:padding="@dimen/padding_small" />

    <TextView
        android:id="@+id/tv_user_info_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="?selectableItemBackground"
        android:padding="@dimen/padding_normal" />

    <Button
        android:id="@+id/btn_user_info_logout"
        style="@style/style_btn_middle_corners5_blue"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="退出登录" />
</LinearLayout>