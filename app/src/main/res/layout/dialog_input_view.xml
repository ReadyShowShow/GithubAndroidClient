<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <TextView
        android:id="@+id/tv_dialog_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="@dimen/font_larger" />

    <EditText
        android:id="@+id/et_dialog_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@drawable/bg_border_corners5_light_blue_white"
        android:maxWidth="200dp"
        android:minWidth="100dp"
        android:textSize="@dimen/font_large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_input_confirm"
            style="@style/style_btn_middle_corners5_blue"
            android:layout_marginRight="@dimen/spacing_small"
            android:text="@string/confirm" />

        <Button
            android:id="@+id/btn_dialog_input_cancel"
            style="@style/style_btn_middle_corners5_blue"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>