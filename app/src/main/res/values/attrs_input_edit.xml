<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputEdit">
        <!-- 对应EditText的hint -->
        <attr name="input_hint" format="reference|string" />
        <!-- 对应EditText的背景 -->
        <attr name="editBg" format="reference" />
        <!-- 对应EditText的输入类型 -->
        <attr name="inputType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
            <enum name="numberDecimal" value="3" />
            <enum name="phone" value="4" />
            <enum name="textPassword" value="5" />
        </attr>
        <!-- 对应EditText的singleLine -->
        <attr name="singleLine" format="boolean" />
        <!-- 对应删除按钮图片 -->
        <attr name="deleteImg" format="reference" />
        <!-- 对应EditText的imeOptions -->
        <attr name="input_imeOptions" format="enum">
            <enum name="actionDone" value="1" />
            <enum name="actionNext" value="2" />
            <enum name="actionSearch" value="3" />
            <enum name="actionSend" value="4" />
        </attr>
    </declare-styleable>
</resources>